<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record
        model="ir.ui.view"
        id="account_view_move_form_inherit_account_move_line_deep_sort"
    >
        <field name="model">account.move</field>
        <field
            name="name"
        >account.view.move.form.inherit.account.move.line.deep_sort</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    name="cus_inv_line_sorting"
                    string="Sorting"
                    attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund'))]}"
                >
                    <group name="cus_inv_line_sorting">
                        <label for="cus_inv_line_order" />
                        <div>
                            <b>Parameter 1: </b>
                            <field
                                name="cus_inv_line_order"
                                options="{'no_create': True}"
                            />
                            <br />
                            <b>Parameter 2: </b>
                            <field
                                name="cus_inv_line_order_2"
                                options="{'no_create': True}"
                            />
                            <br />
                            <b>Order: </b>
                            <field
                                name="cus_inv_line_direction"
                                attrs="{'required': ['|', ('cus_inv_line_order', '!=', False), ('cus_inv_line_order_2', '!=', False)]}"
                            />
                        </div>
                    </group>
                </page>
                <page
                    name="vend_bill_line_sorting"
                    string="Sorting"
                    attrs="{'invisible': [('type', 'not in', ('in_invoice', 'in_refund'))]}"
                >
                    <group name="vend_bill_line_sorting">
                        <label for="vend_bill_line_order" />
                        <div>
                            <b>Parameter 1: </b>
                            <field
                                name="vend_bill_line_order"
                                options="{'no_create': True}"
                            />
                            <br />
                            <b>Parameter 2: </b>
                            <field
                                name="vend_bill_line_order_2"
                                options="{'no_create': True}"
                            />
                            <br />
                            <b>Order: </b>
                            <field
                                name="vend_bill_line_direction"
                                attrs="{'required': ['|', ('vend_bill_line_order', '!=', False), ('vend_bill_line_order_2', '!=', False)]}"
                            />
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
